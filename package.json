{
  "name": "sintlucasmasters",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:e2e": "npm run test:e2e:db:setup && wrangler dev --port 5174 --persist-to .wrangler/e2e-state --var E2E_SKIP_AUTH:true",
    "test:e2e": "playwright test",
    "test:e2e:db:init": "wrangler d1 execute sintlucasmasters --local --persist-to .wrangler/e2e-state --file=./schema.sql",
    "test:e2e:db:seed": "node scripts/seed-e2e.mjs",
    "test:e2e:db:setup": "npm run test:e2e:db:init && npm run test:e2e:db:seed",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy --env=''",
    "db:init": "wrangler d1 execute sintlucasmasters --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute sintlucasmasters --remote --file=./schema.sql",
    "db:import": "node scripts/import-to-d1.mjs --local",
    "db:import:remote": "node scripts/import-to-d1.mjs --remote",
    "db:rebuild": "node scripts/db-rebuild.mjs --local",
    "db:rebuild:remote": "node scripts/db-rebuild.mjs --remote",
    "setup-secrets": "op inject -i .env.template -o .env && node scripts/setup-secrets.mjs --local",
    "setup-secrets:remote": "node scripts/setup-secrets.mjs --remote",
    "create-admin": "node scripts/create-admin.mjs --local",
    "create-admin:remote": "node scripts/create-admin.mjs --remote",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,jsx,tsx,html,css,md}\""
  },
  "dependencies": {
    "hono": "^4.11.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260113.0",
    "@playwright/test": "^1.57.0",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "prettier": "^3.8.1",
    "wrangler": "^4.59.1",
    "typescript": "^5.8.0"
  }
}
