{
  "name": "sintlucasmasters",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n worker,admin -c blue,magenta \"npm run dev:worker\" \"npm run dev:admin\"",
    "dev:worker": "wrangler dev",
    "dev:e2e": "wrangler dev --port 5174",
    "dev:admin": "vite --config admin/vite.config.ts",
    "test:e2e": "playwright test",
    "build:admin": "vite build --config admin/vite.config.ts",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy --env=''",
    "db:init": "wrangler d1 execute sintlucasmasters --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute sintlucasmasters --remote --file=./schema.sql",
    "import": "node scripts/import-to-d1.mjs --local",
    "import:remote": "node scripts/import-to-d1.mjs --remote",
    "db:reset": "node scripts/import-to-d1.mjs --local --reset",
    "db:reset:remote": "node scripts/import-to-d1.mjs --remote --reset",
    "db:rebuild": "node scripts/db-rebuild.mjs --local",
    "db:rebuild:remote": "node scripts/db-rebuild.mjs --remote",
    "setup-secrets": "op inject -i .env.template -o .env && node scripts/setup-secrets.mjs --local",
    "setup-secrets:remote": "node scripts/setup-secrets.mjs --remote",
    "create-admin": "node scripts/create-admin.mjs --local",
    "create-admin:remote": "node scripts/create-admin.mjs --remote"
  },
  "dependencies": {
    "hono": "^4.11.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260113.0",
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "vite": "^6.1.1",
    "wrangler": "^4.59.1"
  }
}
